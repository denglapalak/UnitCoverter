<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- User input -->
    <EditText
        android:id="@+id/inputValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter value"/>

    <!-- Spinner for selecting input unit -->
    <Spinner
        android:id="@+id/inputUnitSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputValue"
        android:layout_marginTop="8dp"/>

    <!-- Spinner for selecting output unit -->
    <Spinner
        android:id="@+id/outputUnitSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputUnitSpinner"
        android:layout_marginTop="8dp"/>

    <!-- Button to trigger conversion -->
    <Button
        android:id="@+id/convertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/outputUnitSpinner"
        android:layout_marginTop="16dp"
        android:text="Convert"/>

    <!-- Result TextView -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertButton"
        android:layout_marginTop="16dp"/>
</RelativeLayout>

